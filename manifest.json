{
  "manifest_version": 3,
  "name": "Custom Sounds",
  "version": "0.9.8",
  "author": "Kirutre",
  "description": "Add customizable sounds to firefox",
  "homepage_url": "https://github.com/Kirutre/firefox_custom_sounds",

  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Set Sounds"
  }
}
