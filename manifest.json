{
  "manifest_version": 3,
  "name": "Custom Sounds",
  "version": "0.9",
  "author": "Kirutre",
  "description": "Add customizable sounds to firefox",
  "homepage_url": "https://github.com/Kirutre/firefox_custom_sounds",

  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Set Sounds"
  }
}
